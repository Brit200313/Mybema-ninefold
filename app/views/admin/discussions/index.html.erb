<section class='dashboard-container'>
  <h2 class='admin-section-header'>
    Discussions
  </h2>

  <p class='guidelines-intro'>
    These are the existing discussions in your community. You can and should regularly also start new discussions.
  </p>

  <div class='admin-btn-wrapper'>
    <%= link_to 'New discussion', new_discussion_path, class: 'admin-btn green-btn' %>
  </div>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Discussion</th>
        <th class='ctr-txt'>Responses</th>
        <th class='ctr-txt non-mobile'>Activity</th>
        <th class='ctr-txt'>Visibility</th>
        <th class='ctr-txt'>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @discussions.each do |discussion| %>
        <tr>
          <td class='clickable-row js-clickable-row' data-url='<%= discussion_path(discussion.slug) %>'>
            <%= link_to discussion.title, discussion_path(discussion.slug) %>

            <div class='discussion-detail'>
              <%= discussion.category_name %>
            </div>
          </td>

          <td class='ctr-txt'>
            <%= discussion.discussion_comments_count %>
          </td>

          <td class='ctr-txt non-mobile' momentTime='<%= l(discussion.updated_at, format: :moment) %>'>
            <%= discussion.updated_at.to_date %>
          </td>

          <td class='ctr-txt'>
            <%= discussion.hidden? ? 'Hidden' : 'Visible' %>
          </td>

          <td class='ctr-txt clickable-row js-clickable-row'
              data-url='<%= edit_admin_discussion_path(discussion) %>'>
            <%= link_to 'manage', edit_admin_discussion_path(discussion) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>