<section class='dashboard-container full-height'>
  <div class='discussion-editor'>
    <% if @category.errors.any? %>
      <% @category.errors.full_messages.each do |message| %>
        <span class='single-error'>
          <%= message %>
        </span>
      <% end %>
    <% end %>

    <%= form_for @category, url: admin_discussion_category_path do |f| %>
      <div class='discussion-form--title'>
        <%= f.label :name, 'Name:', class: 'discussion-form--label' %>
        <%= f.text_field :name, class: 'discussion-form--input' %>
      </div>

      <div class='btn-group'>
        <%= f.submit "update category", class: "admin-btn green-btn" %>
        <%= link_to 'delete category', admin_discussion_category_path,
            class: 'admin-btn red-btn', method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= link_to 'Cancel and return to categories', admin_discussion_categories_path, class: 'discussion-form--cancel' %>
  </div>
</section>