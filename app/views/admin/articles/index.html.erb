<section class='dashboard-container'>
  <h2 class='admin-section-header'>
    Articles
  </h2>

  <p class='guidelines-intro'>
    Your knowledgebase has <%= pluralize @articles.count, 'article' %>. Add articles via the sections tab in the sidebar.
  </p>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Article</th>
        <th class='ctr-txt'>Updated</th>
        <th class='rght-txt'>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td class='clickable-row js-clickable-row' data-url='<%= article_path(article) %>'>
            <%= link_to article.title, article_path(article) %>

            <div class='discussion-detail'>
              <%= article.section.title %>
            </div>
          </td>

          <td class='ctr-txt' momentTime='<%= l(article.updated_at, format: :moment) %>'>
            <%= article.updated_at.to_date %>
          </td>

          <td class='rght-txt'>
            <%= link_to 'manage', edit_admin_section_article_path(article.section, article) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>