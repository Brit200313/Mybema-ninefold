<section class='dashboard-container'>
  <h2 class='admin-section-header'>
    Comments
  </h2>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Comment</th>
        <th class='ctr-txt'>Created</th>
        <th class='ctr-txt'>Visibility</th>
        <th class='ctr-txt'>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td class='clickable-row js-clickable-row'
              data-url='<%= discussion_path(comment.discussion.slug, anchor: "comment-#{comment.id}") %>'>

            <%= link_to comment.body.truncate(150), discussion_path(comment.discussion.slug,
                anchor: "comment-#{comment.id}") %>

            <div class='discussion-detail'>
              <%= comment.discussion.title %>
            </div>
          </td>

          <td class='ctr-txt' momentTime='<%= l(comment.updated_at, format: :moment) %>'>
            <%= comment.created_at.to_date %>
          </td>

          <td class='ctr-txt'>
            <%= comment.hidden? ? 'Hidden' : 'Visible' %>
          </td>

          <td class='ctr-txt clickable-row js-clickable-row' data-url='<%= edit_admin_comment_path(comment) %>'>
            <%= link_to 'manage', edit_admin_comment_path(comment) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>