<section class='dashboard-container'>
  <h2 class='admin-section-header'>
    Users
  </h2>

  <table class='table table-hover'>
    <thead>
      <tr>
        <th class='non-mobile'>Name</th>
        <th>Username</th>
        <th class='non-mobile'>Email</th>
        <th class='ctr-txt'>Discussions</th>
        <th class='ctr-txt'>Comments</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td class='non-mobile'>
            <%= user.name %>
          </td>

          <td>
            <%= user.username %>
          </td>

          <td class='non-mobile'>
            <%= user.email %>
          </td>

          <td class='ctr-txt'>
            <%= user.discussion_count %>
          </td>

          <td class='ctr-txt'>
            <%= user.comment_count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>